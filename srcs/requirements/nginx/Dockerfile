FROM    debian:buster

RUN     apt-get update -y && apt-get upgrade -y && apt-get install nginx -y && apt-get install openssl -y
RUN     mkdir -p /etc/nginx/ssl
RUN     openssl req -x509 -nodes -out /etc/nginx/ssl/inception.crt -keyout /etc/nginx/ssl/inception.key -subj "/C=FR/ST=PACA/L=Nice/O=42/OU=42Nice/CN=wivongso.42.fr"
RUN     mkdir -p /var/run/nginx

COPY    conf/nginx.conf /etc/nginx/nginx.conf

RUN     chmod 755 /var/www/html
RUN     chown -R www-data:www-data /var/www/html

EXPOSE  443

CMD     ["nginx", "-g", "daemon off;"]